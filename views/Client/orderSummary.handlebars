<div>
		<div class="jumbotron">
			<img src="/images/cart5.png" alt="logo" width="6%" height="6%"/>
			<b><font size="5">Order Summary</font></b>
		<table class="table table-striped table-bordered table-sm" cellspacing="0" width="60%">
		<thead class="thead-dark">
			<tr>
				<th>ItemName</th>
				<th>ItemPrice</th>
				<th>ItemQty</th>
				<th>SubTotal</th>
			</tr>
		</thead>
		<tbody>
				{{#each data}}
					<tr>
						<td>{{this.order_ItemName}}</td>
						<td>{{this.order_ItemPrice}}</td>
						<td>{{this.order_ItemQty}}</td>
						<td>{{this.order_subTotal}}</td>
					</tr>
				{{/each}}
			</tbody>
		<tfooter>
				<tr><td>
				<h3>Total = ${{orderTotal}}</h3>
				</td></tr>
		</tfooter>
		</table>
		<p>*Items exceeding inventory are unable to process, and removed automatically</p>
		<form action='/customers'>
    		<input type="submit" class='btn btn-dark btn-lg' value="Go Back to Shopping" />
		</form>
	</div>
</div>